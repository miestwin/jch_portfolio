<style>
.gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    grid-auto-rows: 200px;
    grid-gap: 10px;
}

.gallery__item {
    overflow: hidden;
    position: relative;
    color: #ffffff;
    cursor: pointer;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    transform: translateZ(0);
}

.gallery__item img {
    grid-column: 1 / -1;
    grid-row: 1 / -1;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.slideshow {
    position: absolute;
    z-index: 1050;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
}

.overlay {
    position: fixed;
    background-color: rgba(0,0,0,0.7);
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1080;
    display: none;
}

.overlay--open {
    display: grid;
    align-items: center;
    justify-content: center;
}

.overlay__inner {
    background-color: #ffffff;
    padding: 20px;
    position: relative;
}

.overlay__close {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: transparent;
    outline: none;
    border: none;
    font-size: inherit;
    cursor: pointer;
}

@media (min-width: 750px) {
    .gallery {
        grid-gap: 40px;
    }
}
</style>
