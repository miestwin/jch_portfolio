<style>
.gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    grid-auto-rows: 200px;
    grid-gap: 10px;
}

.gallery__item {
    overflow: hidden;
    position: relative;
    color: #ffffff;
    cursor: pointer;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    transform: translateZ(0);
}

.gallery__item img {
    grid-column: 1 / -1;
    grid-row: 1 / -1;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.slideshow {
    position: absolute;
    z-index: 1050;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
}

.overlay {
    position: fixed;
    background-color: rgba(0,0,0,0.7);
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1080;
    display: none;
}

.overlay--open {
    display: none;
    align-items: center;
    justify-content: center;
}

.overlay__inner {
    background-color: #ffffff;
    width: 700px;
    padding: 20px;
    position: relative;
    display: flex;
    justify-content: center;
}

.overlay__inner img {
    max-width: 100%;
}

.overlay__close {
    cursor: pointer;
    position: absolute;
    top: 0;
    right: 0;
    font-weight: bold;
    font-size: 18px;
    padding: 16px;
    color: #000000;
    user-select: none;
    transition: 0.2s ease;
}

.overlay__prev,
.overlay__next {
    cursor: pointer;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    padding: 16px;
    color: #000000;
    font-weight: bold;
    font-size: 18px;
    user-select: none;
    transition: 0.2s ease;
}

.overlay__prev {
    left: 0;
    border-radius: 0 3px 3px 0;
}

.overlay__next {
    right: 0;
    border-radius: 3px 0 0 3px;
}

.overlay__close:hover,
.overlay__prev:hover,
.overlay__next:hover {
    color: #ffffff;
    background-color: rgba(0, 0, 0, 0.7);
}

@media (min-width: 750px) {
    .gallery {
        grid-gap: 40px;
    }

    .overlay--open {
        display: grid;
    }
}
</style>
