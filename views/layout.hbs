<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Jakub Chełstowski Portfolio</title>
        <link rel="apple-touch-icon" sizes="180x180" href="images/favicon/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="images/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="images/favicon/favicon-16x16.png">
        <link rel="manifest" href="images/favicon/site.webmanifest">
        <link rel="mask-icon" href="images/favicon/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">
        <link rel="stylesheet" type="text/css" href="/css/style.css">
    </head>
    <body>
        <div class="app">
            <header class="app__header">
                <div class="header__brand">
                    <a href="/" title="Jakub Chełstowski Portfolio">
                        <span class="l-icon l-jch"></span>
                    </a>
                </div>
                <nav class="header__nav">
                    <ul>
                        <li class="header__nav__item">
                            <a href="/" class="{{#if drawing}}active{{/if}}">RYSUNKI</a>
                        </li>
                        <li class="header__nav__item">
                            <a href="/about" class="{{#if about}}active{{/if}}">O MNIE</a>
                        </li>
                        <li class="header__nav__item">
                            <a href="/contact" class="{{#if contact}}active{{/if}}">KONTAKT</a>
                        </li>
                    </ul>
                </nav>
                <div class="header__links">
                    <a href="https://www.facebook.com/jachelstowski/" target="blank" class="header__links__item facebook">
                        <span class="l-icon l-facebook"></span>
                    </a>
                    <a href="https://www.instagram.com/chelstowski.jakub/" target="blank" class="header__links__item instagram">
                        <span class="l-icon l-instagram"></span>
                    </a>
                </div>
                <button type="button" class="hamburger">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </header>
            <aside class="app__aside">
                <button type="button" class="aside__close">X</button>
                <nav class="aside__nav">
                    <ul>
                        <li class="aside__nav__item">
                            <a href="/" class="">RYSUNKI</a>
                        </li>
                        <li class="aside__nav__item">
                            <a href="/about">O MNIE</a>
                        </li>
                        <li class="aside__nav__item">
                            <a href="/contact">KONTAKT</a>
                        </li>
                    </ul>
                </nav>
                <div class="aside__links">
                    <a href="https://www.facebook.com/jachelstowski/" target="blank" class="aside__links__item facebook">
                        <span class="l-icon l-facebook"></span>
                        FACEBOOK
                    </a>
                    <a href="https://www.instagram.com/chelstowski.jakub/" target="blank" class="aside__links__item instagram">
                        <span class="l-icon l-instagram"></span>
                        INSTAGRAM
                    </a>
                </div>
            </aside>
            <main class="app__main">
                {{{body}}}
            </main>
        </div>
        <script>
            var hamburgerBtn = document.querySelector('.app__header button.hamburger');
            var menuCloseBtn = document.querySelector('.app__aside button.aside__close');
            var menuAside = document.querySelector('.app__aside');

            hamburgerBtn.addEventListener('click', function() {
                menuAside.classList.add('visible');
            });

            menuCloseBtn.addEventListener('click', function() {
                menuAside.classList.remove('visible');
            });
        </script>
    </body>
</html>